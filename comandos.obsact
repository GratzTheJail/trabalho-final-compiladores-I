dispositivos:
    Ventilador[nivel]
    Termometro[temperatura]
    Teclado
    Celular[bateria] 
    PC
fimdispositivos

execute ligar em PC;
def temperatura = 30;
alerta para Teclado : "Tecla faltando";
alerta para Ventilador : "Temperatura em " temperatura;
def bateria = 1;
difundir: "Quente demais" -> [Termometro];
difundir: "Umido demais" -> [PC, Celular, Teclado];
difundir: "Bateria em " bateria -> [PC, Teclado];
execute desligar em Celular;